{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "prettier",
    "plugin:jsdoc/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "plugins": ["@typescript-eslint", "prettier", "jsdoc"],
  "rules": {
    "linebreak-style": ["warn", "unix"],
    "prettier/prettier": "warn",
    "max-depth": ["warn", 2],
    "max-nested-callbacks": ["warn", 2],
    "jsdoc/require-file-overview": 1,
    "jsdoc/no-undefined-types": 0,
    "jsdoc/no-types": 0,
    "jsdoc/require-returns-type": 0,
    "jsdoc/require-param-type": 0,
    "jsdoc/require-jsdoc": [
      1,
      {
        "contexts": [
          "ClassDeclaration",
          "ClassProperty",
          "FunctionDeclaration",
          "MethodDefinition",
          "FunctionExpression"
        ]
      }
    ],
    "jsdoc/require-description": [
      1,
      {
        "contexts": [
          "ClassDeclaration",
          "ClassProperty",
          "FunctionDeclaration",
          "MethodDefinition",
          "FunctionExpression"
        ]
      }
    ],
    "no-console": "off"
  },
  "root": true,
  "ignorePatterns": [
    "vite-env.d.ts",
    "vite.config.ts",
    "node_modules/**",
    "dist/**",
    "public/**",
    "assets/**"
  ]
}
